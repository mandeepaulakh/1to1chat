<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frame"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:elevation="6dp"
        android:clickable="true"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">
        <RelativeLayout
            android:id="@+id/frameCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:padding="6dp">


            <RelativeLayout
                android:id="@+id/thumbnail"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="4dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/friendImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_account_circle_black_36dp"
                    app:civ_border_color="#e3afafaf"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="38dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/checked_online"
                        android:visibility="visible"
                        android:src="@drawable/ic_online_green"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:padding="2dp"
                android:layout_toRightOf="@+id/thumbnail">

                <TextView
                    android:id="@+id/friendName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Mandeep singh"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="25dp"
                    android:textSize="17sp"
                    android:typeface="sans" />


                <TextView
                    android:id="@+id/friendStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/friendName"
                    android:text="status"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginRight="12dp"
                    android:singleLine="true"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />


                <!--<ImageView android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_right_arrow"

                    android:id="@+id/imageview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>-->
            </RelativeLayout>


        </RelativeLayout>
       <!-- <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:visibility="visible"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="bottom"
            android:background="#dfdfdf" />-->
    </LinearLayout>

</LinearLayout>